<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity" >

    <!-- Name Label -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="18dp" >

        <ImageButton
            android:id="@+id/btnNextPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_btn_search_go" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnMap"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="48dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/maps2" />

    <ImageButton
        android:id="@+id/btnCall"
        android:layout_width="61dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/btnNavigate"
        android:layout_marginRight="36dp"
        android:layout_toLeftOf="@+id/btnNavigate"
        android:src="@drawable/phone2" />

    <ImageButton
        android:id="@+id/btnNavigate"
        android:layout_width="58dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btnMap"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nav2" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnNavigate"
        android:layout_below="@+id/btnCall"
        android:layout_marginTop="52dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:text="Address"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>